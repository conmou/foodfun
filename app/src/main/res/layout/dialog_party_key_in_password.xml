<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_10dp"
    android:backgroundTint="@color/primary_100">


    <TextView
        android:id="@+id/labPartyKeyInPasswordInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="請輸入房間密碼："
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtKeyInPartyPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPartyKeyInPasswordCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFF"
        android:text="取消"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtKeyInPartyPassword"
        app:layout_constraintTop_toBottomOf="@+id/txtKeyInPartyPassword"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPartyKeyInPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary_200"
        android:text="確定"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtKeyInPartyPassword"
        app:layout_constraintTop_toTopOf="@+id/btnPartyKeyInPasswordCancel" />

    <EditText
        android:id="@+id/txtKeyInPartyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:hint="輸入密碼"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labPartyKeyInPasswordInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>